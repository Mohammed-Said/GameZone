@model Game
@{
    ViewData["Title"] = Model.Name;
}
<div class="card border-success   rounded-4 mt-5">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-success fw-bolder">@Model.Name</h1>
                    @foreach (var item in Model.Categories)
                    {
                        <span class="budge bg-danger fs-5 me-1 p-2 rounded rounded-2 ">@item.Category.Name</span>
                    }
                    <p class="fs-5 mt-4">@Model.Description</p>
                </div>
                <div>
                    @foreach (var gameDevice in Model.Devices)
                    {
                        <i class="@gameDevice.Device.Icon me-2 fs-1 text-secondary"></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="@Model.Name" class="w-100 d-flex align-items-center rounded-end-4" />
            </div>
        </div>
    </div>
</div>